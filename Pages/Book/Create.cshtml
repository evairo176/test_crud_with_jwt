@page
@model test_crud_with_jwt.Pages.Book.CreateModel
@{
    ViewData["title"] = "Create Book";
}

<div class="card shadow">
    <div class="card-header">
        <h3>@ViewData["title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Books.BookTitle" class="control-label"></label>
                        <input asp-for="Books.BookTitle" class="form-control"/>
                        <span asp-validation-for="Books.BookTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Books.BookDescription" class="control-label"></label>
                        <input asp-for="Books.BookDescription" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Books.Author" class="control-label"></label>
                        <input asp-for="Books.Author" class="form-control" />
                        <span asp-validation-for="Books.Author" class="text-danger"></span>
                    </div>
                    <div class="mt-2 form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-page="Index" class="btn btn-danger">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}